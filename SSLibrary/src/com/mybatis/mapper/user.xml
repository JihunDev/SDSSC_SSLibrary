<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!-- mapper의 클래스 이름이 들어가야함 -->
<mapper namespace="com.mybatis.mapper.UserMapper">
	<select id="selectusers" resultType="user">
		SELECT * FROM A_USER
	</select>

	<select id="selectuser" parameterType="user" resultType="user">
		SELECT *
		FROM A_USER WHERE ID = #{id}
	</select>

	<insert id="insertuser" parameterType="user">
		INSERT INTO A_USER
		VALUES(#{id},#{pwd},#{name},#{phone},#{img},#{email},SYSDATE,#{isadmin})
		<selectKey resultType="user">
			SELECT * FROM A_USER WHERE ID = #{id}
		</selectKey>
	</insert>

	<delete id="deleteuser" parameterType="user">
		DELETE FROM A_USER WHERE
		ID = #{id}
	</delete>

	<update id="updateuser" parameterType="user">
		UPDATE A_USER SET PWD =
		#{pwd}, NAME = #{name}, PHONE = #{phone}, IMG = #{img}, EMAIL =
		#{email}, ISADMIN = #{isadmin} WHERE ID = #{id}
	</update>
</mapper>